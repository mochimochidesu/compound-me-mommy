#!/usr/bin/env python3
import sys
import os

script_dir = os.path.dirname(os.path.abspath(__file__))
lib_dir = os.path.join(os.path.dirname(script_dir), 'lib', 'compoundmemommy')
sys.path.insert(0, lib_dir)

try:
    from compoundmemommy_calculator import CompoundMeMommyCalculator
    if __name__ == "__main__":
        calculator = CompoundMeMommyCalculator()
        calculator.run()
except ImportError as e:
    print(f"Error: Could not import CompoundMeMommy: {e}")
    sys.exit(1)
except KeyboardInterrupt:
    print("\nCompoundMeMommy interrupted by user.")
    sys.exit(0)
except Exception as e:
    print(f"An unexpected error occurred: {e}")
    sys.exit(1)
